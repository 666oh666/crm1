<% provide(:title, '新規顧客登録') %>
<div id="new">
<h1>新規顧客登録</h1>
<%= form_for (@customer), :url => {:action => 'create'} do |f| %>
	
<div class="form-input">
	<%= f.label :job_type ,"職種" %> 
	<%= f.text_field :job_type %>
</div>
<div class="form-input">
	<%= f.label :company_name, "会社名" %> 
	<%= f.text_field :company_name %> 
</div>
<div class="form-input">
	<%= f.label :tel, "電話番号" %> 
	<%= f.text_field :tel %>	
</div>
<div class="form-input">
	<%= f.label :address, "住所" %>
	<%= f.text_field :address %>
</div>
<div class="form-input">
	<%= f.label :rep, "代表者" %>
	<%= f.text_field :rep %>
</div>
<div class="form-input">
	<%= f.label :pic, "担当者" %>
	<%= f.text_field :pic %>
</div>
<div class="form-input">
	<%= f.label :call_date, "架電日" %>
	<%= f.date_select :call_date %>
</div>
<div class="form-input">
	<%= f.label :result, "結果" %>
	<%= f.text_field :result %>
</div>
<div class="form-input">
	<%= f.label :memo, "メモ" %>
	<%= f.text_field :memo %>
</div>
<div class="form-input" style="margin-top:20px; text-align:center;">
	<%= f.submit %>
</div>
<% end %>
<div class="form-input" style="text-align:center;">
<%= link_to '一覧へ', index_path %>
</div>

</div> <!-- new -->