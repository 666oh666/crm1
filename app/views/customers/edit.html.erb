<div id="edit">

<h1>編集</h1>
<%= form_for @customer, :url => {:action => 'update'} do |f| %>
	
<div class="form-input">
	<%= f.label :職種 %> 
	<%= f.text_field :job_type %>
</div>
<div class="form-input">
	<%= f.label :会社名 %> 
	<%= f.text_field :company_name %> 
</div>
<div class="form-input">
	<%= f.label :電話番号 %> 
	<%= f.text_field :tel %>	
</div>
<div class="form-input">
	<%= f.label :住所 %>
	<%= f.text_field :address %>
</div>
<div class="form-input">
	<%= f.label :代表者 %>
	<%= f.text_field :rep %>
</div>
<div class="form-input">
	<%= f.label :担当者 %>
	<%= f.text_field :pic %>
</div>
<div class="form-input">
	<%= f.label :架電日 %>
	<%= f.date_select :call_date %>
</div>
<div class="form-input">
	<%= f.label :結果 %>
	<%= f.text_field :result %>
</div>
<div class="form-input">
	<%= f.label :メモ %>
	<%= f.text_field :memo %>
</div>
<div class="form-input" style="margin-top:20px; text-align:center;">
	<%= f.submit %>
</div>
<% end %>
<div class="form-input" style="text-align:center;">
<%= link_to '一覧へ', index_path %>
</div>

</div>